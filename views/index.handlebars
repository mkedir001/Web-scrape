<div>
    <h1 class="card z-depth-3 center-align mt-5">The latest from The New York Times, this is your daily briefing</h1>
    <div class="row">
        <div class="col s3"></div>
        <h5 class="card z-depth-3 center-align col s6">Scrape away!</h5>
    </div>
</div>

<div class="row">
    <div class="col s2"></div>
    <div class="col s8 left-align">
        {{#each articles}}
        <div class="card-panel">
            <h4>{{this.title}}</h4>
            {{!-- goes to article.handlebars --}}
            <a href="/readArticle/{{this._id}}" class="waves-effect waves-light btn blue lighten-1" id="btnSignUp">Read Article</a>
        </div>
        {{/each}}
    </div>
</div>